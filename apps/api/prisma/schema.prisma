generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  role         Role
  phone        String  @unique
  email        String   @unique
  fullName    String
  // lastName     String 
  passwordHash String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  provider Provider?
  client   Client?

   @@index([email])
  passwordResetTokens PasswordResetToken[]
}

enum Role {
  ADMIN
  PROVIDER
  CLIENT
}

model Provider {
  id                    String  @id @default(cuid())
  userId                String  @unique
  businessName          String
  bio                   String?
  avatarUrl             String?
  coverUrl              String?
  category              String
  subcategory           String?
  servicePercent        Int     @default(10)
  workingHoursJson      Json
  isLocked              Boolean @default(false)
  lockReason            String?
  promoFreeAppointments Int     @default(0)

  // Current (private) location
  latitude  Float?
  longitude Float?
  address   String?

  // Published (public) location
  publishedLatitude  Float?
  publishedLongitude Float?
  publishedLabel     String?
  isLocationLocked   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User               @relation(fields: [userId], references: [id])
  services     Service[]
  appointments Appointment[]
  statements   MonthlyStatement[]
  favorites    Favorite[]         @relation("ProviderFavorites")

  @@index([category])
  @@index([latitude, longitude])
  @@index([publishedLatitude, publishedLongitude])
}

model Client {
  id        String   @id @default(cuid())
  userId    String   @unique
  avatarUrl String?
  createdAt DateTime @default(now())

  user         User          @relation(fields: [userId], references: [id])
  appointments Appointment[]
  favorites    Favorite[]
}

model Service {
  id          String   @id @default(cuid())
  providerId  String
  name        String
  description String?
  priceCents  Int
  durationMin Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id])

  appointments Appointment[]

  @@index([providerId])
}

model Appointment {
  id         String     @id @default(cuid())
  providerId String
  clientId   String
  serviceId  String
  startsAt   DateTime
  endsAt     DateTime
  priceCents Int
  status     ApptStatus @default(PENDING)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  provider Provider @relation(fields: [providerId], references: [id])
  client   Client   @relation(fields: [clientId], references: [id])
  service  Service  @relation(fields: [serviceId], references: [id])

  @@index([providerId, startsAt])
  @@index([clientId, startsAt])
}

enum ApptStatus {
  PENDING
  CONFIRMED
  DENIED
  CANCELLED
  COMPLETED
  NO_SHOW
}

model MonthlyStatement {
  id           String    @id @default(cuid())
  providerId   String
  periodYear   Int
  periodMonth  Int
  percent      Int
  grossCents   Int
  serviceCents Int
  isPaid       Boolean   @default(false)
  paidMethod   String?
  paidRef      String?
  paidAt       DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  provider Provider @relation(fields: [providerId], references: [id])

  @@unique([providerId, periodYear, periodMonth])
}

model Favorite {
  id         String   @id @default(cuid())
  clientId   String
  providerId String
  createdAt  DateTime @default(now())

  client   Client   @relation(fields: [clientId], references: [id])
  provider Provider @relation(fields: [providerId], references: [id], name: "ProviderFavorites")

  @@unique([clientId, providerId])
}


model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}
